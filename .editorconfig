# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[{Makefile,*.make,*.go}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[{Makefile,*.make,*.go,*.ts,*.tsx,*.js,*.jsx,*.yml,*.yaml,*.txt,*.css,*.scss,*.sass,*.styl,*.md}]
insert_final_newline = true

[{Makefile,*.make,*.go,*.ts,*.tsx,*.js,*.jsx,*.yml,*.yaml,*.txt,*.css,*.scss,*.sass,*.styl,}]
trim_trailing_whitespace = true
